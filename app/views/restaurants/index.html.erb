<h1>All Restaurants</h1>
<ul>
  <% @restaurants.each do |restaurant| %>
    <li><%= link_to restaurant.name, restaurant_path(restaurant) %> <%= "(" %><%= restaurant.category %><%= ")" %>
    </li>
  <% end %>
</ul> 

<div class="card-group">
<% @restaurants.each do |restaurant| %>
  <div class="card">
    <img src="https://images.unsplash.com/photo-1555396273-367ea4eb4db5?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1974&q=80" class="card-img-top" alt="#">
    
    <div class="card-body">
      <h5 class="card-title"><%= link_to restaurant.name, restaurant_path(restaurant) %></h5>
      <p class="card-text"><%= restaurant.category %></p>
    </div>
    <% end %>
  </div>